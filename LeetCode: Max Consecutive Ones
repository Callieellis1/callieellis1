/*Container for Leetcode in Java*/

/*Max Consecutive Ones*/
class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        int oneCount = 0;
        int maxOneCount = 0;
        for(int i: nums){
            if(i==1){
                oneCount++;
            } else {
                if (oneCount > maxOneCount) {
                    maxOneCount = oneCount;
                }
                if (maxOneCount >= nums.length/2){
                    return maxOneCount;
                }
                oneCount=0;
            }
                
        }
        return Math.max(maxOneCount, oneCount);
    }
}


